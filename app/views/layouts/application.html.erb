<!DOCTYPE html>
<html>
  <head>
    <title>TagIt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.6/umd/popper.min.js" type="text/javascript"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/fa20398bce.js"></script>
   
   	<script>
   		//on turbolinks:load init owlCarousel
        $(document).on("turbolinks:load", function() {
          $("#owl-carousel").owlCarousel({

			navigation: true, // Show next and prev buttons
			autoPlay: 5000,
			paginationSpeed: 400,
			singleItem: true
			
			// "singleItem:true" is a shortcut for:
		
			// itemsDesktop : false,
			// itemsDesktopSmall : false,
			// itemsTablet: false,
			// itemsMobile : false
	
	});
        });
    //on turbolinks:before-cache destroy it owlCarousel
        $(document).on('turbolinks:before-cache', function() {
          $("#owl-carousel").owlCarousel('destroy');
        });
   	</script>

  </head>


  <body >
	<!-- Start preloader -->
		<div class="preloader">
			<div class="spinner">
				<div class="bounce1"></div>
				<div class="bounce2"></div>
				<div class="bounce3"></div>
			</div>
		</div>
	<!-- End preloader -->
	<!-- Start navigation -->
	<div class="navbar navbar-default navbar-transparent navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
	<!-- Light and dark logo -->
					<a href="#intro" class="navbar-brand">
						<img class="img-responsive" src="/assets/logo.png" alt="" data-start="opacity: 1;" data-20p="opacity: 0;">
						<img class="img-responsive" src="/assets/logo.png" alt="" data-start="opacity: 0;" data-20p="opacity: 1;">
					</a>
				</div>
	<!-- Navigation links -->
				<div class="collapse navbar-collapse" id="navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to "Home", home_url %></li>
						<li  id="prodotti"><%= link_to "Prodotti", products_url,  :class => "prodotti" %>
						<div id="link_prodotti" class="link-prodotti">
						<div class="left-side">
							Categoria
							<ul>
								<li><a href="#" >Vino</a></li>
								<li><a href="#" >Olio</a></li>
								<li><a href="#" >Birra</a></li>
								<li><a href="#" >Pasta e Riso</a></li>
								<li><a href="#" >Latticini</a></li>
								<li><a href="#" >Ortofrutta</a></li>
							</ul>
						</div>
						<div class="right-side">
							Regione
							<ul>
								<li><a href="#" >Lazio</a></li>
								<li><a href="#" >Abruzzo</a></li>
								<li><a href="#" >Altre Regioni</a></li>
							</ul>
						</div>
					</div></li>
						<% if current_user %>
						<li><%= link_to "Esci", destroy_user_session_url, :method => 'delete'%></li>
						<% else %>
						<li><%= link_to "Accedi", new_user_session_url %></li>
						<li><%= link_to "Registrati", new_user_registration_url %></li>
						<% end %>
					</ul>
					
				</div>
			</div>
		</div>

	<div class="container" id="main">
		
	<!-- End navigation -->
	  
	    <%= yield %>
	  </div>
    
  <script>
  	$(document).ready(function() {
  		$('.preloader').hide(); 
  	});
  </script>
  </body>
</html>
